\begin_body

\begin_layout Standard
\begin_inset Formula 
\[
c_{t}^{H}=\{1+\varphi(1-\tau/\lambda)\}y_{t}=\chi y_{t}.
\]

\end_inset


\begin_inset Formula 
\begin{align*}
c_{t}^{S} & =\frac{c_{t}-\lambda c_{t}^{H}}{1-\lambda}=\frac{1-\lambda\chi}{1-\lambda}y_{t}\\
 & =1+\frac{\varphi(\lambda-\tau)}{1-\lambda}y_{t}
\end{align*}

\end_inset


\begin_inset Formula 
\[
\frac{}{}
\]

\end_inset


\begin_inset Formula 
\begin{align*}
n_{t}^{H} & =\frac{1-\gamma(1-\tau/\lambda)}{1+\varphi/\gamma}\frac{w_{t}}{\gamma}\\
 & =(1+(1-\chi)\frac{\gamma}{\varphi})y_{t}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
n_{t}^{S} & =\frac{n_{t}-\lambda n_{t}^{H}}{1-\lambda}=\left(1-\frac{\lambda(1-\chi)}{1-\lambda}\frac{\gamma}{\varphi}\right)y_{t}.\\
 & =\left(\frac{1-\chi}{1-\lambda}\frac{\gamma}{\varphi}\right)y_{t}=\left(1+\frac{\gamma(\tau-\lambda)}{1-\lambda}\right)y_{t}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\kappa(c_{t}^{S}-n_{t}^{H}) & =\kappa\frac{\varphi+\gamma}{\varphi}\frac{\lambda(1-\chi)}{1-\lambda}\\
 & =\xi\frac{\varphi+1}{\varphi}\frac{\lambda(1-\chi)}{1-\lambda}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\tilde{\gamma} & =\left\{ 1+\frac{\lambda(1-\chi)}{1-\lambda}\right\} \gamma+\xi\frac{\lambda(1-\chi)}{1-\lambda}\frac{\varphi+1}{\varphi}\\
 & =\gamma+\frac{\lambda(1-\chi)}{1-\lambda}\left\{ \gamma+\xi\frac{\varphi+1}{\varphi}\right\} \\
 & =\gamma+\frac{\lambda(1-\chi)}{1-\lambda}\left\{ \gamma+\kappa\frac{\varphi+\gamma}{\varphi}\right\} \\
 & =\gamma+\frac{\lambda(1-\chi)}{1-\lambda}\left\{ \kappa+\gamma\frac{\varphi+\kappa}{\varphi}\right\} 
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\chi & =1\Leftrightarrow\lambda=\tau\\
\lambda\chi & =1\Leftrightarrow\lambda=\frac{1+\tau\varphi}{1+\varphi}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\gamma & =\xi\frac{\lambda(\chi-1)}{1-\lambda\chi}\frac{\varphi+1}{\varphi}\\
\Leftrightarrow\lambda & =\frac{1+\tau\varphi}{1+\varphi}-\frac{\xi(1-\tau)}{(\varphi+1)(\xi+\gamma)}\\
 & =\tau+\frac{\gamma(1-\tau)}{(\varphi+1)(\xi+\gamma)}\\
 & =1+\frac{(\tau-1)(\xi+\varphi/(\varphi+1))}{\xi+\gamma}
\end{align*}

\end_inset

Notice 
\begin_inset Formula 
\begin{align*}
\gamma & =\xi\frac{\lambda(\chi-1)}{1-\lambda\chi}\frac{\varphi+1}{\varphi}\\
\Leftrightarrow\lambda & =1+\frac{(\tau-1)(\xi+\varphi/(\varphi+1))}{\xi+\gamma}\\
 & =\frac{1+\tau\varphi}{1+\varphi}-\frac{\xi(1-\tau)}{(\varphi+1)(\xi+\gamma)}\\
 & =\tau+\frac{\gamma(1-\tau)}{(\varphi+1)(\xi+\gamma)}\ge\tau
\end{align*}

\end_inset

The last relation has some interesting features.
 1) 
\begin_inset Formula $\lambda=1$
\end_inset

 at 
\begin_inset Formula $\xi=-\varphi/(\varphi+1)$
\end_inset

 or the lowest bound of the concavity,
 2) 
\begin_inset Formula $\lambda=(1+\tau\varphi)/(1+\varphi)$
\end_inset

 or 
\begin_inset Formula $\lambda\chi=1$
\end_inset

 at 
\begin_inset Formula $\xi=0$
\end_inset

,
 3) 
\begin_inset Formula $\lambda=\tau$
\end_inset

 or 
\begin_inset Formula $\chi=1$
\end_inset

 when 
\begin_inset Formula $\gamma=0$
\end_inset

,
 and 4) 
\begin_inset Formula $\lambda$
\end_inset

 is decreasing in 
\begin_inset Formula $\xi$
\end_inset

 and increasing in 
\begin_inset Formula $\gamma$
\end_inset

.
 
\end_layout

\begin_layout Itemize
When 
\begin_inset Formula $0<\lambda\leq\frac{1+\tau\varphi}{1+\varphi}-\frac{\xi(1-\tau)}{(\varphi+1)(\xi+\gamma)}$
\end_inset

 and 
\begin_inset Formula $\xi\geq0$
\end_inset

,
 then 
\begin_inset Formula $\tilde{\gamma}\geq0$
\end_inset

.
\end_layout

\begin_deeper
\begin_layout Enumerate
When 
\begin_inset Formula $\lambda>\tau$
\end_inset

,
 then 
\begin_inset Formula $\tilde{\gamma}>\gamma$
\end_inset

 and GE-EIS 
\begin_inset Formula $1/\tilde{\gamma}$
\end_inset

 increases with 
\begin_inset Formula $\lambda$
\end_inset

 and 
\begin_inset Formula $\xi$
\end_inset

.
\end_layout

\begin_layout Enumerate
When 
\begin_inset Formula $\lambda\leq\tau$
\end_inset

,
 then 
\begin_inset Formula $\tilde{\gamma}\leq\gamma$
\end_inset

 and GE-EIS 
\begin_inset Formula $1/\tilde{\gamma}$
\end_inset

 decreases with 
\begin_inset Formula $\lambda$
\end_inset

 and 
\begin_inset Formula $\xi$
\end_inset

.
\end_layout

\end_deeper
\begin_layout Itemize
When 
\begin_inset Formula $\frac{1+\tau\varphi}{1+\varphi}-\frac{\xi(1-\tau)}{(\varphi+1)(\xi+\gamma)}<\lambda<1$
\end_inset

 and 
\begin_inset Formula $-\varphi/(\varphi+1)\leq\xi<0$
\end_inset

,
 then 
\begin_inset Formula $0\leq\tilde{\gamma}\leq\gamma$
\end_inset

,
 and GE-EIS 
\begin_inset Formula $1/\tilde{\gamma}$
\end_inset

 decreases with 
\begin_inset Formula $\lambda$
\end_inset

 and 
\begin_inset Formula $\xi$
\end_inset

.
\end_layout

\end_body
