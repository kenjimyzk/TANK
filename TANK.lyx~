\end_inset


\end_layout

\begin_layout Standard
Assume 
\begin_inset Formula $\tau=0$
\end_inset

 and 
\begin_inset Formula $\alpha=0$
\end_inset

,
 
\begin_inset Formula 
\begin{align*}
c_{t}^{H} & =(1+\varphi)y_{t}\\
c_{t}^{S} & =\frac{c_{t}-\lambda c_{t}^{H}}{1-\lambda}=\frac{1-\lambda(1+\varphi)}{1-\lambda}y_{y}=\left\{ 1-\frac{\lambda\varphi}{1-\lambda}\right\} y_{t}\\
n_{t}^{H} & =(1-\gamma)y_{t}\\
n_{t}^{S} & =\frac{n_{t}-\lambda n_{t}^{H}}{1-\lambda}=\frac{1-\lambda(1-\gamma)}{1-\lambda}y_{y}=\left\{ 1+\frac{\lambda\gamma}{1-\lambda}\right\} y_{t}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
mu_{t}^{S} & =-(\gamma+\kappa)c_{t}^{S}+\kappa MC_{SS}n_{t}^{S}\\
 & =-\gamma c_{t}^{S}-\kappa(c_{t}^{S}-MC_{SS}n_{t}^{S})\\
 & =-\gamma\left\{ 1-\frac{\lambda\varphi}{1-\lambda}\right\} y_{t}-\kappa\left\{ 1-\frac{\lambda\varphi}{1-\lambda}\right\} y_{t}+MC\kappa\left\{ 1+\frac{\lambda\gamma}{1-\lambda}\right\} y_{t}\\
 & =-\gamma\left\{ 1-\frac{\lambda\varphi}{1-\lambda}\right\} y_{t}-\kappa(1-MC)y_{t}+\frac{\lambda\kappa}{1-\lambda}(\varphi+\gamma+(MC-1)\gamma)y_{t}\\
 & =-\gamma\left\{ 1-\frac{\lambda\varphi}{1-\lambda}\right\} y_{t}-\kappa(1-MC)y_{t}+\frac{\lambda\kappa}{1-\lambda}(\varphi+\gamma)y_{t}-\frac{\lambda\kappa}{1-\lambda}\gamma(1-MC)y_{t}\\
 & =-\gamma\left\{ 1-\frac{\lambda\varphi}{1-\lambda}\right\} y_{t}-\kappa(1-MC)\left\{ 1+\frac{\lambda\gamma}{1-\lambda}\right\} y_{t}+\frac{\lambda\kappa}{1-\lambda}(\varphi+\gamma)y_{t}
\end{align*}

\end_inset

Assume 
\begin_inset Formula $\tau=0$
\end_inset

 
\begin_inset Formula 
\begin{align*}
c_{t}^{H} & =(1+\varphi)\left\{ 1+\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}\right\} y_{t}\\
c_{t}^{S} & =\frac{c_{t}-\lambda c_{t}^{H}}{1-\lambda}=\frac{1-\lambda(1+\varphi)\left\{ 1+\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}\right\} }{1-\lambda}y_{t}=\left\{ 1-\frac{\lambda\varphi}{1-\lambda}-\frac{\lambda(1+\varphi)}{1-\lambda}\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}\right\} y_{t}\\
n_{t}^{H} & =(1-\gamma)\left\{ 1+\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}\right\} y_{t}\\
n_{t}^{S} & =\frac{n_{t}-\lambda n_{t}^{H}}{1-\lambda}=\frac{\frac{1}{1-\alpha}y_{t}-\lambda n_{t}^{H}}{1-\lambda}\\
 & =\frac{1+\frac{\alpha}{1-\alpha}-\lambda(1-\gamma)\left\{ 1+\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}\right\} }{1-\lambda}y_{t}=\left\{ 1+\frac{\lambda\gamma}{1-\lambda}+\frac{\alpha}{1-\alpha}\frac{1}{1-\lambda}-\frac{\lambda(1-\gamma)}{1-\lambda}\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}\right\} y_{t}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
mu_{t}^{S} & =-(\gamma+\kappa)c_{t}^{S}+\kappa(1-\alpha)MC_{SS}n_{t}^{S}\\
 & =-\gamma c_{t}^{S}-\kappa(c_{t}^{S}-(1-\alpha)MC_{SS}n_{t}^{S})\\
 & =-\gamma\left\{ 1-\frac{\lambda\varphi}{1-\lambda}-\frac{\lambda(1+\varphi)}{1-\lambda}\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}\right\} y_{t}\\
 & -\kappa(\left\{ 1-\frac{\lambda\varphi}{1-\lambda}-\frac{\lambda(1+\varphi)}{1-\lambda}\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}\right\} y_{t}\\
 & +(1-\alpha)MC\kappa\left\{ 1+\frac{\alpha}{1-\alpha}\frac{1}{1-\lambda}+\frac{\lambda\gamma}{1-\lambda}-\frac{\lambda(1-\gamma)}{1-\lambda}\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}\right\} )y_{t}\\
 & =-\gamma\left\{ 1-\frac{\lambda\varphi}{1-\lambda}-\frac{\lambda(1+\varphi)}{1-\lambda}\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}\right\} y_{t}-\kappa\left\{ 1-(1-\alpha)MC-\frac{\alpha}{1-\lambda}MC\right\} y_{t}\\
 & +\frac{\lambda\kappa}{1-\lambda}(\varphi+(1-\alpha)MC\gamma)y_{t}+\kappa(1+\varphi-(1-\gamma)(1-\alpha)MC)\frac{\lambda}{1-\lambda}\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}y_{t}\\
 & =-\gamma\left\{ 1-\frac{\lambda\varphi}{1-\lambda}-\frac{\lambda(1+\varphi)}{1-\lambda}\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}\right\} y_{t}-\kappa\left\{ 1-MC-\frac{\alpha\lambda}{1-\lambda}MC\right\} y_{t}\\
 & +\frac{\lambda\kappa}{1-\lambda}(\varphi+(1-\alpha)MC\gamma)y_{t}+\kappa(1+\varphi-(1-\gamma)(1-\alpha)MC)\frac{\lambda}{1-\lambda}\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}y_{t}\\
 & =-\gamma\left\{ 1-\frac{\lambda\varphi}{1-\lambda}-\frac{\lambda(1+\varphi)}{1-\lambda}\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}\right\} y_{t}-\kappa(1-MC)y_{t}\\
 & +\frac{\lambda\kappa}{1-\lambda}\left\{ \varphi+((1-\alpha)\gamma+\alpha)MC\right\} y_{t}+\frac{\lambda\kappa}{1-\lambda}\left\{ 1+\varphi-(1-\gamma)(1-\alpha)MC\right\} \frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}y_{t}
\end{align*}

\end_inset


\begin_inset Formula $MC=1$
\end_inset


\begin_inset Formula 
\begin{align*}
mu_{t}^{S} & =-\gamma\left\{ 1-\frac{\lambda\varphi}{1-\lambda}-\frac{\lambda(1+\varphi)}{1-\lambda}\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}\right\} y_{t}\\
 & +\frac{\lambda\kappa}{1-\lambda}\frac{\varphi+(1-\alpha)\gamma}{(1-\alpha)(\gamma+\varphi)}\left\{ \varphi+(1-\alpha)\gamma+\alpha\right\} y_{t}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula 
\[
d_{t}=-(1-\alpha)MCw_{t}+y_{t}-(1-\alpha)MCn_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
Assume 
\begin_inset Formula $\lambda\chi>1$
\end_inset

 and 
\begin_inset Formula 
\[
\gamma<\xi\frac{\lambda(\chi-1)}{1-\lambda\chi}\frac{\varphi+1}{\varphi}.
\]

\end_inset

Since 
\begin_inset Formula $\chi=1+\varphi(1-\tau/\lambda)$
\end_inset

,
 the inequality 
\begin_inset Formula $\chi>1$
\end_inset

 is equivalent to 
\begin_inset Formula $\tau<\lambda$
\end_inset

 (for 
\begin_inset Formula $\varphi>0$
\end_inset

).　Moreover,
 because 
\begin_inset Formula $\lambda\chi>1$
\end_inset

 implies 
\begin_inset Formula $1-\lambda\chi<0$
\end_inset

,
 the second inequality is equivalent to
\begin_inset Formula 
\begin{align*}
\xi & <-\frac{\varphi}{\varphi+1}\frac{\lambda\chi-1}{\lambda(\chi-1)}\,\gamma\\
 & =-\frac{\varphi}{\varphi+1}\frac{\varphi(\lambda-\tau)+\lambda-1}{\varphi(\lambda-\tau)}\,\gamma\\
 & =-\frac{\varphi(\tau-\lambda)+1-\lambda}{\varphi(\tau-\lambda)}\frac{\varphi}{1+\varphi}\,\gamma\\
 & =-\left(1+\frac{1-\lambda}{\varphi(\tau-\lambda)}\right)\frac{\varphi}{1+\varphi}\,\gamma.
\end{align*}

\end_inset

On the other hand,
 concavity requires 
\begin_inset Formula $\xi\geq-\varphi\gamma/(1+\varphi)$
\end_inset

,
 which contradicts the bound above.
 
\begin_inset Formula 
\begin{align*}
(1-\lambda\chi)\gamma & >\xi\lambda(\chi-1)\frac{\varphi+1}{\varphi}\\
\lambda\{\xi(\chi-1)\frac{\varphi+1}{\varphi}+\chi\gamma\} & <\gamma\\
\lambda & <\frac{\gamma}{\xi(\chi-1)\frac{\varphi+1}{\varphi}+\chi\gamma}=\frac{\gamma}{\xi(1-\tau/\lambda)(\varphi+1)+(1+\varphi(1-\tau/\lambda))\gamma}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\xi(\lambda-\tau)(\varphi+1)+(\lambda+\varphi(\lambda-\tau))\gamma & <\gamma\\
\lambda\xi(\varphi+1)+\lambda(1+\varphi)\gamma & <\tau\xi(\varphi+1)+(1+\varphi\tau)\gamma\\
\lambda & <\frac{\tau\xi(\varphi+1)+(1+\varphi\tau)\gamma}{(\varphi+1)(\xi+\gamma)}\\
 & =\frac{\tau(\xi+\gamma)-\tau\gamma+\frac{(1+\varphi\tau)}{\varphi+1}\gamma}{\xi+\gamma}\\
 & =\tau+\frac{-(1+\varphi)\tau\gamma+(1+\varphi\tau)\gamma}{(1+\varphi)(\xi+\gamma)}\\
 & =\tau+\frac{\gamma(1-\tau)}{(1+\varphi)(\xi+\gamma)}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\lambda & <\frac{\tau\xi(\varphi+1)+(1+\varphi\tau)(\gamma+\xi-\xi)}{(\varphi+1)(\xi+\gamma)}\\
 & =\frac{1+\varphi\tau}{1+\varphi}+\frac{\tau\xi(\varphi+1)-\xi(1+\varphi\tau)}{(\varphi+1)(\xi+\gamma)}\\
 & =\frac{1+\varphi\tau}{1+\varphi}-\frac{\xi(1-\tau)}{(\varphi+1)(\xi+\gamma)}\\
 & =\tau+\frac{1-\tau}{1+\varphi}-\frac{\xi(1-\tau)}{(\varphi+1)(\xi+\gamma)}\\
 & =\tau+\frac{\gamma(1-\tau)}{(\varphi+1)(\xi+\gamma)}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\lambda & <1+\tau-1+\frac{\gamma(1-\tau)}{(\varphi+1)(\xi+\gamma)}\\
 & =1+(1-\tau)\frac{\gamma-(\varphi+1)(\xi+\gamma)}{(\varphi+1)(\xi+\gamma)}\\
 & =1+(\tau-1)\left\{ \frac{\varphi\gamma/(\varphi+1)+\xi}{\xi+\gamma}\right\} 
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\gamma & =(\varphi+1)(\xi+\gamma)\\
\varphi\gamma & =\xi(\varphi+1)
\end{align*}

\end_inset


\begin_inset Formula 
\[
\lambda<\frac{1+\varphi\tau}{1+\varphi}
\]

\end_inset


\begin_inset Formula 
\[
\xi=-\frac{\varphi\gamma}{\varphi+1}
\]

\end_inset


\begin_inset Formula 
\[
\xi+\gamma>\frac{\gamma}{\varphi+1}
\]

\end_inset


\begin_inset Formula 
\[
\lambda<\frac{-\tau\varphi\gamma+(1+\varphi\tau)\gamma}{-\varphi\gamma+(\varphi+1)\gamma}
\]

\end_inset


\end_layout

\begin_layout Standard
Proposition 1:
\end_layout

\begin_layout Enumerate
If 
\begin_inset Formula $\xi\geq0$
\end_inset

 and 
\begin_inset Formula $0\leq\lambda<\tau$
\end_inset

,
 then 
\begin_inset Formula $0<1/\gamma\leq1/\tilde{\gamma}$
\end_inset

,
 and 
\begin_inset Formula $1/\tilde{\gamma}$
\end_inset

 decreases with 
\begin_inset Formula $\lambda$
\end_inset

 and 
\begin_inset Formula $\xi$
\end_inset

.
\end_layout

\begin_layout Enumerate
If 
\begin_inset Formula $\xi\geq0$
\end_inset

 and 
\begin_inset Formula $\tau\leq\lambda<\frac{1+\varphi\tau}{1+\varphi}-\frac{\xi(1-\tau)}{(\varphi+1)(\xi+\gamma)}$
\end_inset

,
 then 
\begin_inset Formula $0<1/\tilde{\gamma}\leq1/\gamma$
\end_inset

,
 and 1/
\begin_inset Formula $\tilde{\gamma}$
\end_inset

 increases with 
\begin_inset Formula $\lambda$
\end_inset

 and 
\begin_inset Formula $\xi$
\end_inset

.
\end_layout

\begin_layout Enumerate
If 
\begin_inset Formula $-\frac{\varphi\gamma}{1+\varphi}<\xi<0$
\end_inset

 and 
\begin_inset Formula $\frac{1+\varphi\tau}{1+\varphi}-\frac{\xi(1-\tau)}{(\varphi+1)(\xi+\gamma)}\leq\lambda<1$
\end_inset

,
 then 
\begin_inset Formula $0<1/\tilde{\gamma}<1/\gamma$
\end_inset

 and 
\begin_inset Formula $1/\tilde{\gamma}$
\end_inset

 increases with 
\begin_inset Formula $\lambda$
\end_inset

 and 
\begin_inset Formula $\xi$
\end_inset

.
 
\end_layout

