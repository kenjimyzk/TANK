\begin_layout Itemize
\begin_inset Formula $\kappa$
\end_inset

 (補完性の程度)：

\begin_inset Formula 
\begin{align*}
U_{CN}^{S}\equiv U_{CN}(C^{S},N^{S}) & =-\frac{\xi}{1-\gamma}\chi(C^{S})^{-\gamma}(N^{S})^{\varphi}\left(\frac{(C^{S})^{1-\gamma}}{1-\gamma}-\chi\frac{(N^{S})^{1+\varphi}}{1+\varphi}\right)^{-\xi/(1-\gamma)-1}\\
\kappa & \equiv-\frac{U_{CN}^{S}C^{S}}{U_{N}^{S}}=\frac{\xi}{1-\gamma}(C^{S})^{1-\gamma}\left(\frac{(C^{S})^{1-\gamma}}{1-\gamma}-\chi\frac{(N^{S})^{1+\varphi}}{1+\varphi}\right)^{-1}\\
 & =\xi\left(1-\chi\frac{1-\gamma}{1+\varphi}\frac{(N^{S})^{1+\varphi}}{(C^{S})^{1-\gamma}}\right)^{-1}\\
 & =\xi\left(1-\frac{1-\gamma}{1+\varphi}(1-\alpha)MC\frac{N^{S}/N}{C^{S}/Y}\right)^{-1}
\end{align*}

