\begin_layout Itemize
\begin_inset Formula $\gamma\equiv-\frac{U_{CC}C}{U_{C}}+\frac{U_{CN}C}{U_{N}}$
\end_inset


\begin_inset Formula 
\begin{align*}
U_{CC}^{S}\equiv U_{CC}(C^{S},N^{S})= & -\gamma C^{-\gamma-1}\left(\frac{(C^{S})^{1-\gamma}}{1-\gamma}-\chi\frac{(N^{S})^{1+\varphi}}{1+\varphi}\right)^{-\xi/(1-\gamma)}\\
 & -\frac{\xi}{1-\gamma}C^{-2\gamma}\left(\frac{(C^{S})^{1-\gamma}}{1-\gamma}-\chi\frac{(N^{S})^{1+\varphi}}{1+\varphi}\right)^{-\xi/(1-\gamma)-1}\\
\frac{U_{CC}^{S}C^{S}}{U_{C}^{S}}= & -\gamma-\frac{\xi}{1-\gamma}C^{1-\gamma}\left(\frac{(C^{S})^{1-\gamma}}{1-\gamma}-\chi\frac{(N^{S})^{1+\varphi}}{1+\varphi}\right)^{-1}\\
= & -\gamma-\kappa
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\varphi\equiv\frac{U_{NN}N}{U_{N}}-\frac{U_{CN}N}{U_{C}}$
\end_inset


\begin_inset Formula 
\begin{align*}
U_{NN}^{S}\equiv U_{NN}(C^{S},N^{S})= & -\chi\varphi(N^{S})^{\varphi-1}\left(\frac{(C^{S})^{1-\gamma}}{1-\gamma}-\chi\frac{(N^{S})^{1+\varphi}}{1+\varphi}\right)^{-\xi/(1-\gamma)}\\
 & -\frac{\xi}{1-\gamma}\chi^{2}(N^{S})^{2\varphi}\left(\frac{(C^{S})^{1-\gamma}}{1-\gamma}-\chi\frac{(N^{S})^{1+\varphi}}{1+\varphi}\right)^{-\xi/(1-\gamma)-1}\\
\frac{U_{NN}^{S}N^{S}}{U_{N}^{S}}= & \varphi+\frac{\xi}{1-\gamma}\chi(N^{S})^{\varphi+1}\left(\frac{(C^{S})^{1-\gamma}}{1-\gamma}-\chi\frac{(N^{S})^{1+\varphi}}{1+\varphi}\right)^{-1}\\
= & \varphi+(1-\alpha)(1-\Phi)\frac{N^{S}/N}{C^{S}/C}\frac{\xi}{1-\gamma}(C^{S})^{1-\gamma}\left(\frac{(C^{S})^{1-\gamma}}{1-\gamma}-\chi\frac{(N^{S})^{1+\varphi}}{1+\varphi}\right)^{-1}\\
= & \varphi+\kappa(1-\alpha)(1-\Phi)\frac{N^{S}/N}{C^{S}/C}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
MU
\begin_inset Formula 
\begin{align*}
mu_{t}^{S} & =\frac{C^{S}U_{CC}^{S}}{U_{C}^{S}}c_{t}^{S}+\frac{N^{S}U_{CN}^{S}}{U_{C}^{S}}n_{t}^{S}\\
 & =\frac{C^{S}U_{CC}^{S}}{U_{C}^{S}}c_{t}^{S}-\kappa\frac{N^{S}U_{N}^{S}}{C^{S}U_{C}^{S}}n_{t}^{S}\\
 & =\frac{C^{S}U_{CC}^{S}}{U_{C}^{S}}c_{t}^{S}+\kappa\frac{N^{S}}{C^{S}}\chi(C^{S})^{\gamma}(N^{S})^{\varphi}n_{t}^{S}\\
