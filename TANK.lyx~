\begin_layout Itemize
Solution:
\end_layout

\begin_layout Itemize
Substituting 
\begin_inset Formula $n_{t}^{H}=(w_{t}-\gamma c_{t}^{H})/\varphi$
\end_inset

 and 
\begin_inset Formula $d_{t}=-(1-\alpha)MCw_{t}+y_{t}-(1-\alpha)MCn_{t}$
\end_inset

 into 
\begin_inset Formula $c_{t}^{H}=w_{t}+n_{t}^{H}+\frac{\tau}{\lambda}d_{t}$
\end_inset

 leads to 
\begin_inset Formula 
\begin{align*}
c_{t}^{H} & =w_{t}+(w_{t}-\gamma c_{t}^{H})/\varphi-\frac{\tau}{\lambda}(1-\alpha)MCw_{t}+\frac{\tau}{\lambda}(1-MC)y_{t}\\
 & =\frac{1+\varphi(1-(1-\alpha)MC\tau/\lambda)}{1+\gamma/\varphi}\frac{w_{t}}{\varphi}+\frac{\tau}{\lambda}\frac{1-MC}{1+\gamma/\varphi}y_{t}\\
 & =\frac{1+\varphi(1-(1-\alpha)MC\tau/\lambda)}{\varphi+\gamma}w_{t}+\frac{\tau}{\lambda}\frac{\varphi(1-MC)}{\varphi+\gamma}y_{t}
\end{align*}

\end_inset

Substituting 
\begin_inset Formula $w_{t}=\gamma c_{t}+\varphi n_{t}$
\end_inset

 and 
\begin_inset Formula $y_{t}=c_{t}=(1-\alpha)n_{t}$
\end_inset

 into the above leads to
\begin_inset Formula 
\begin{align*}
c_{t}^{H} & =\frac{1+\varphi(1-(1-\alpha)MC\tau/\lambda)}{\varphi+\gamma}(\gamma c_{t}+\varphi n_{t})+\frac{\tau}{\lambda}\frac{\varphi(1-MC)}{\varphi+\gamma}y_{t}\\
 & =\frac{1+\varphi(1-(1-\alpha)MC\tau/\lambda)}{\varphi+\gamma}\{\gamma y_{t}+\frac{\varphi}{1-\alpha}y_{t}\}+\frac{\tau}{\lambda}\frac{\varphi(1-MC)}{\varphi+\gamma}y_{t}\\
 & =\frac{1+\varphi(1-(1-\alpha)MC\tau/\lambda)}{\varphi+\gamma}\{(\gamma+\varphi)y_{t}+\frac{\alpha\varphi}{1-\alpha}y_{t}\}+\frac{\tau}{\lambda}\frac{\varphi(1-MC)}{\varphi+\gamma}y_{t}\\
 & =\{1+\varphi(1-(1-\alpha)MC\tau/\lambda)\}\left\{ 1+\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}\right\} y_{t}+\frac{\varphi(\tau/\lambda)(1-MC)}{\varphi+\gamma}y_{t}\\
 & =\{1+\varphi(1-(1-\alpha)MC\tau/\lambda)+\frac{\varphi(\tau/\lambda)(1-MC)}{\varphi+\gamma}\}y_{t}+\{1+\varphi(1-(1-\alpha)MC\tau/\lambda)\}\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}y_{t}\\
 & =\{1+\varphi(1-\tilde{\tilde{\tau}}/\lambda\}y_{t}+\frac{\alpha\varphi\{1+\varphi(1-\tilde{\tau}/\lambda)\}}{(1-\alpha)(\gamma+\varphi)}y_{t}\\
 & =\{1+\varphi(1-\tilde{\tilde{\tau}}/\lambda)\}y_{t}+\frac{\alpha\varphi\{1+\varphi(1-\tilde{\tau}/\lambda)\}}{(1-\alpha)(\gamma+\varphi)}y_{t}=\chi^{C}y_{t}\\
\tilde{\tau} & =(1-\alpha)MC\tau\\
\tilde{\tilde{\tau}} & =\tilde{\tau}-\frac{\tau(1-MC)}{\varphi+\gamma}
\end{align*}

\end_inset

Since 
\begin_inset Formula $c_{t}=\lambda c_{t}^{H}+(1-\lambda)c_{t}^{S}$
\end_inset

,
 
\begin_inset Formula 
\begin{align*}
c_{t}^{S} & =\frac{c_{t}-\lambda c_{t}^{H}}{1-\lambda}=\frac{1-\lambda\chi^{C}}{1-\lambda}y_{t}.\\
 & =\frac{1-\lambda\{1+\varphi(1-\tilde{\tilde{\tau}}/\lambda)\}+\tilde{\lambda\frac{\alpha\varphi\{1+\varphi(1-\tilde{\tau}/\lambda)\}}{(1-\alpha)(\gamma+\varphi)}}}{1-\lambda}y_{t}\\
 & =y_{t}-\frac{\lambda}{1-\lambda}\varphi(1-\tilde{\tilde{\tau}}/\lambda)y_{t}+\frac{\lambda}{1-\lambda}\frac{\alpha\varphi\{1+\varphi(1-\tilde{\tau}/\lambda)\}}{(1-\alpha)(\gamma+\varphi)}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Similarly,
 substituting 
\begin_inset Formula $c_{t}^{H}=(w_{t}-\varphi n_{t}^{H})/\gamma$
\end_inset

 and 
\begin_inset Formula $d_{t}=-(1-\alpha)MCw_{t}+y_{t}-(1-\alpha)MCn_{t}$
\end_inset

 into 
\begin_inset Formula $n_{t}^{H}=-w_{t}+c_{t}^{H}-\frac{\tau}{\lambda}d_{t}$
\end_inset

 leads to 
\begin_inset Formula 
\begin{align*}
n_{t}^{H} & =-w_{t}+(w_{t}-\varphi n_{t}^{H})/\gamma+\frac{\tau}{\lambda}(1-\alpha)MCw_{t}-\frac{\tau}{\lambda}\{y_{t}-(1-\alpha)MCn_{t}\}\\
 & =\frac{1-\gamma(1-(1-\alpha)MC\tau/\lambda)}{1+\varphi/\gamma}\frac{w_{t}}{\gamma}-\frac{\tau}{\lambda}\frac{1-MC}{1+\varphi/\gamma}y_{t}\\
 & =\frac{1-\gamma(1-(1-\alpha)MC\tau/\lambda)}{\gamma+\varphi}w_{t}-\frac{\gamma(\tau/\lambda)(1-MC)}{\varphi+\gamma}y_{t}
\end{align*}

\end_inset

Substituting 
\begin_inset Formula $w_{t}=\gamma c_{t}+\varphi n_{t}$
\end_inset

 and 
\begin_inset Formula $y_{t}=c_{t}=(1-\alpha)n_{t}$
\end_inset

 into the above leads to
\begin_inset Formula 
\begin{align*}
n_{t}^{H} & =\frac{1-\gamma(1-(1-\alpha)MC\tau/\lambda)}{\gamma+\varphi}(\gamma c_{t}+\varphi n_{t})-\frac{\gamma(\tau/\lambda)(1-MC)}{\varphi+\gamma}y_{t}\\
 & =\frac{1-\gamma(1-(1-\alpha)MC\tau/\lambda)}{\gamma+\varphi}(\gamma+\varphi+\varphi\alpha/(1-\alpha))y_{t}-\frac{\gamma(\tau/\lambda)(1-MC)}{\varphi+\gamma}y_{t}\\
 & =\{1-\gamma(1-(1-\alpha)MC\tau/\lambda))\}\left\{ 1+\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}\right\} y_{t}-\frac{\gamma(\tau/\lambda)(1-MC)}{\varphi+\gamma}y_{t}\\
 & =\{1-\gamma(1-\tilde{\tilde{\tau}}/\lambda\}y_{t}-\{1+\gamma(1-\tilde{\tau}/\lambda)\}\frac{\alpha\varphi}{(1-\alpha)(\gamma+\varphi)}y_{t}
\end{align*}

\end_inset


\begin_inset Formula 
\[
1-\gamma(1-(1-\alpha)(1-1+MC)\tau/\lambda)
\]

\end_inset

Since 
\begin_inset Formula $n_{t}=\lambda n_{t}^{H}+(1-\lambda)n_{t}^{S}$
\end_inset

,
 
\begin_inset Formula 
\begin{align*}
n_{t}^{S} & =\frac{n_{t}-\lambda n_{t}^{H}}{1-\lambda}=\frac{1/(1-\alpha)-\lambda\chi^{N}}{1-\lambda}y_{t}.\\
 & =\frac{y_{t}}{1-\alpha}-\frac{\lambda}{1-\lambda}\gamma(1-\tilde{\tilde{\tau}}/\lambda)y_{t}+\frac{\lambda}{1-\lambda}\frac{\alpha\varphi\{1+\gamma(1-\tilde{\tau}/\lambda)\}}{(1-\alpha)(\gamma+\varphi)}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Assume 
\begin_inset Formula $\alpha=0$
\end_inset

,
 
\begin_inset Formula 
